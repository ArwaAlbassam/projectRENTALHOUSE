    private void jTable1MouseClicked(java.awt.event.MouseEvent evt) {                                     
 
    }                                    
 String IDH="" ,tName="",phone="",rentF="",RentTo="",price;
 double commission, total;
    private void jList1ValueChanged(javax.swing.event.ListSelectionEvent evt) {                                    
    try {
            connection = DriverManager.getConnection("jdbc:mysql://localhost/RentalHouses", "root", "12345");
            query = "SELECT * FROM tensntInformation WHERE ID_T= '" + jList1.getSelectedValue() + "'";
            preparedstatement = connection.prepareStatement(query);
            resultSet = preparedstatement.executeQuery(query);
            resultSet.next();
          IDH = resultSet.getString(10);//الايدي حق البيت
             tName = resultSet.getString(2);//اسم المستاجر
           phone = resultSet.getString(3);//رقمه
                      rentF = resultSet.getString(8);//تاريخ بدايه العقد
           RentTo = resultSet.getString(9);//تاريخ نهايه العقد

                   query = "SELECT * FROM housesinformation WHERE ID_H= '" + IDH+ "'";
            preparedstatement = connection.prepareStatement(query);
            resultSet = preparedstatement.executeQuery(query);
            resultSet.next();      
 price = resultSet.getString(8);//الايدي حق البيت
     int pricee = Integer.parseInt(price);      
double commissionPercentage=2.5;
	 
          commission=(commissionPercentage/100)*pricee;  	   
 total = pricee+ commission;
         m.insertRow(0, new Object[]{IDH , tName , phone, rentF , RentTo , price , commission , total }); 
        } catch (Exception e) {
            JOptionPane.showMessageDialog(null, "Got an exception!");
            System.err.println(e.getMessage());
        }
    }                                   

    private void jLabel4MouseClicked(java.awt.event.MouseEvent evt) {                                     
 ImageIcon icon = new ImageIcon("printpro.png"); 
     //  Icon i = new ImageIcon("prr(2).png");  
          jLabel4.setIcon(icon);
       jLabel2.setText("The Bill is Printing now...");
       
          try {
      Boolean pri =  jTable1.print();
      if (pri){
          JOptionPane.showMessageDialog(null, "Done printing !");
      }
      else {
          JOptionPane.showMessageDialog(null, " printing !"); 
      }} catch (PrinterException ex) {
            Logger.getLogger(NewJFrame.class.getName()).log(Level.SEVERE, null, ex);
        }
         
    }                                    

    
