    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
  String s1 = jTextField2.getText().toString();
        String s2 = new String(jPasswordField1.getPassword());
         int pass = Integer.parseInt(s2);
       int x = 0 ;
        if (evt.getSource() == jButton1) {
             try {
            String URL = "jdbc:mysql://localhost/RentalHouses";
            String username = "root";
            String password = "12345";
            Connection con = DriverManager.getConnection(URL, username, password);
              query = "select * from login  ";
             PreparedStatement ps = con.prepareStatement(query);
             ResultSet r = ps.executeQuery();
             while (r.next()){
                 if (r.getString("username").equalsIgnoreCase(jTextField2.getText())){
                     if (r.getString("password").equalsIgnoreCase(jPasswordField1.getText())){
                      JOptionPane.showMessageDialog(this, "welcome " + s1, "welcome", JOptionPane.PLAIN_MESSAGE);  
                      x=0;
                       dispose();
                 HomePage h = new HomePage();
                   h.setVisible(true);
                   break;
                     } else{
                    x =1; 
                    break;
                    }
                 }else{
                     x=2;
                 }
            }
        } catch (SQLException sqlEx) {
            JOptionPane.showMessageDialog(this, sqlEx.getMessage());
        }
             
      if (x==1){
            JOptionPane.showMessageDialog(this, " password is wrong Try Again ", "ERROR_MESSAGE", JOptionPane.ERROR_MESSAGE);
      }
   else
          if (x==2){
     JOptionPane.showMessageDialog(this, "user is Not exist Try Again ", "ERROR_MESSAGE", JOptionPane.ERROR_MESSAGE);

          }   
            jTextField2.setText("");
            jPasswordField1.setText("");
        }     }                                        

