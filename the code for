package javaapplication394;

import java.awt.HeadlessException;

/**
 *
 * @author renad
 */
public class Splashsplash extends javax.swing.JFrame{
     
    public Splashsplash() throws HeadlessException {
            splashpage spl= new splashpage();
               
                try{
                  for(int i=0;i<=100;i++)
                  {
                      Thread.sleep(30);
                       spl.setVisible(true);
                     spl.jLabel1.setText(Integer.toString(i)+"%");
                   spl.jProgressBar1.setValue(i);
                     if(i==100){
                         spl.setVisible(false);  
                     }
                     
                  }
                }
                catch(Exception e){
                    
                }
               login l = new login();
                         l.setVisible(true);
               
    }
}
