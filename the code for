    private void jPanel1MouseEntered(java.awt.event.MouseEvent evt) {                                     
    

        Graphics g = jPanel1.getGraphics();
     Graphics2D g2d = (Graphics2D) g;
        g2d.setColor(new Color(166, 0, 0));
        int[] xPoints = {500, 250, 750};
        int[] yPoints = {100, 200, 200};
        g2d.fillPolygon(xPoints, yPoints, 3);
        g2d.setColor(Color.WHITE);
        g2d.fillRect(300, 250, 100, 100);
        g2d.fillRect(600, 250, 100, 100);
        g2d.setColor(Color.black);
        g2d.setStroke(new BasicStroke(4));
        g2d.draw(new Rectangle2D.Double(300, 250, 100, 100));
        g2d.draw(new Rectangle2D.Double(600, 250, 100, 100));
        g2d.draw(new Line2D.Double(350, 250, 350, 350));
        g2d.draw(new Line2D.Double(650, 250, 650, 350));
        g2d.draw(new Line2D.Double(300, 300, 400, 300));
        g2d.draw(new Line2D.Double(600, 300, 700, 300));
        g2d.draw(new Rectangle2D.Double(250, 200, 500, 350));
        g2d.draw(new Rectangle2D.Double(450, 350, 100, 200));

        g2d.setColor(new Color(134, 172, 208));
        g2d.fill(new Rectangle2D.Double(450, 350, 100, 200));

        g2d.setColor(Color.black);

        GeneralPath re = new GeneralPath();
        re.moveTo(xPoints[0], yPoints[0]);
        for (int count = 1; count < xPoints.length; count++) {
            re.lineTo(xPoints[count], yPoints[count]);
        }
        re.closePath();
        g2d.draw(re);
        g2d.fillOval(450, 450, 20, 20);
      
    }                                    
 
