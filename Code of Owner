    private void AddhActionPerformed(java.awt.event.ActionEvent evt) {                                     
        int z = 0;
        if (evt.getSource() == Addh) {
            if (v.emailvv(L_ownerEmail.getText()) == false) {
                z = 1;
                JOptionPane.showMessageDialog(this, " Enter valid email ", "Email Validation", JOptionPane.PLAIN_MESSAGE);
            }
        }

        if (evt.getSource() == Addh) {
            if (p.phonev(L_ownerNumber.getText()) == false) {
                z = 1;
                JOptionPane.showMessageDialog(this, " Enter valid phone ", "Phone Validation", JOptionPane.PLAIN_MESSAGE);
            }
        }

        String TNumber = L_ownerNumber.getText();
        int TNO = Integer.parseInt(TNumber);

        if (z != 1) {
            try {
                String id = L_O_ID.getText();
                String name = L_ownerName.getText();
                String ph = L_ownerNumber.getText();
                String email = L_ownerEmail.getText();

                int phone = Integer.parseInt(ph);
                query = "insert into OWNERInformation values(?,?,?,?);";
                preparedstatement = connection.prepareStatement(query);
                preparedstatement.setString(1, id);
                preparedstatement.setString(2, name);
                preparedstatement.setInt(3, phone);
                preparedstatement.setString(4, email);
                preparedstatement.execute();
                preparedstatement.close();
                JOptionPane.showMessageDialog(this, "Successfully Aded!");
                m.addRow(new Object[]{
                    L_O_ID.getText(), L_ownerName.getText(),
                    L_ownerNumber.getText(), L_ownerEmail.getText()
                });
            } catch (SQLException sqlEx) {
                JOptionPane.showMessageDialog(this, sqlEx.getMessage());
            } catch (Exception x) {
                JOptionPane.showMessageDialog(this, "Invalid, Please try again");
            }
        }
   
    }                                    

