    private void DeleteActionPerformed(java.awt.event.ActionEvent evt) {                                       

 int row = TabelO.getSelectedRow();
DefaultTableModel model= (DefaultTableModel)TabelO.getModel();

String selected = model.getValueAt(row, 0).toString();

        if (row >= 0) {

            model.removeRow(row);

            try {
 PreparedStatement ps = connection.prepareStatement("delete from OWNERInformation where ID_O='" + selected + "' ");
                ps.executeUpdate();
            } catch (Exception w) {
                JOptionPane.showMessageDialog(this, "Connection Error!");
            }          
            }
    }                                      

