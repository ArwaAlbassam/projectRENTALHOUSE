    public void doConnect() {
        try {
            String URL = "jdbc:mysql://localhost/RentalHouses";
            String username = "root";
            String password = "12345";
            connection = DriverManager.getConnection(URL, username, password);
        
                try {
                query = "select * from OWNERInformation ";
           PreparedStatement ps = connection.prepareStatement(query);
            ResultSet r = ps.executeQuery();
            m = (DefaultTableModel) TabelO.getModel();
            Object[] row = new Object[4];
          while (r.next()) {
                row[0] = r.getString("ID_O");
                row[1] = r.getString("NAME");
                row[2] = r.getInt("Phone_NO");
                row[3] = r.getString("Email");
                m.addRow(row);
            }
      
            }catch (Exception x) {
            JOptionPane.showMessageDialog(this, "Invalid, Please try again");
        } 
          
        } catch (SQLException sqlEx) {
            JOptionPane.showMessageDialog(this, sqlEx.getMessage());
        }
    }

